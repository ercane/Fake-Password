        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView android:id="@+id/appname"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="10"
                  android:gravity="center_vertical"
                  android:paddingBottom="5dp"
                  android:paddingLeft="10dp"
                  android:paddingTop="5dp" android:text="dasdasdasdasdasdas" android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/cbStatus"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>